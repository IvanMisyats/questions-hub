# PostgreSQL root/superuser password
POSTGRES_ROOT_PASSWORD=your_secure_root_password

# Application user password (used by the .NET app)
QUESTIONSHUB_PASSWORD=your_secure_app_password

# Data storage path
# Local development: ./postgres_data (relative to project folder)
# Local (custom): D:/MyDatabases/questions-hub-db
# VPS: /home/github-actions/questions-hub-data/postgres_data
POSTGRES_DATA_PATH=./postgres_data

# PostgreSQL authentication method
# Local development: md5 (allows connections from Docker networks)
# Production/VPS: scram-sha-256 (secure, default if not set)
POSTGRES_HOST_AUTH_METHOD=md5

