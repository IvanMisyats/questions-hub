# PostgreSQL root/superuser password
POSTGRES_ROOT_PASSWORD=your_secure_root_password

# Application user password (used by the .NET app)
QUESTIONSHUB_PASSWORD=your_secure_app_password

# Data storage path
# Local Windows: ./postgres_data (relative to project folder)
# Local Windows (custom): D:/MyDatabases/questions-hub-db
# VPS Linux: /var/lib/questions-hub/postgres_data
POSTGRES_DATA_PATH=./postgres_data
