@page "/Account/ResetPassword"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using QuestionsHub.Blazor.Domain
@using QuestionsHub.Blazor.Infrastructure
@inject UserManager<ApplicationUser> UserManager

<PageTitle>Скидання пароля</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Новий пароль</h3>

                    @if (_success)
                    {
                        <div class="text-center">
                            <div class="text-success mb-3">
                                <i class="bi bi-check-circle-fill" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="text-success">Пароль змінено!</h5>
                            <p>Ваш пароль успішно оновлено. Тепер ви можете увійти з новим паролем.</p>
                            <a href="/Account/Login" class="btn btn-primary mt-3">Увійти</a>
                        </div>
                    }
                    else if (string.IsNullOrEmpty(Code))
                    {
                        <div class="text-center">
                            <div class="text-danger mb-3">
                                <i class="bi bi-x-circle-fill" style="font-size: 3rem;"></i>
                            </div>
                            <h5 class="text-danger">Невірне посилання</h5>
                            <p>Посилання для скидання пароля недійсне.</p>
                            <a href="/Account/ForgotPassword" class="btn btn-outline-primary mt-3">Запросити нове посилання</a>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(_errorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @_errorMessage
                            </div>
                        }

                        <p class="text-muted mb-4">
                            Введіть вашу електронну адресу та новий пароль.
                        </p>

                        <EditForm Model="@Model" OnValidSubmit="HandleSubmit" FormName="ResetPassword">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <InputText id="email" @bind-Value="Model.Email" class="form-control" placeholder="user@example.com" />
                                <ValidationMessage For="@(() => Model.Email)" />
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Новий пароль</label>
                                <InputText id="password" @bind-Value="Model.Password" type="password" class="form-control" />
                                <ValidationMessage For="@(() => Model.Password)" />
                                <small class="form-text text-muted">
                                    Мінімум 8 символів, включаючи цифру, велику та малу літеру
                                </small>
                            </div>

                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Підтвердження пароля</label>
                                <InputText id="confirmPassword" @bind-Value="Model.ConfirmPassword" type="password" class="form-control" />
                                <ValidationMessage For="@(() => Model.ConfirmPassword)" />
                            </div>

                            <button type="submit" class="btn btn-primary w-100" disabled="@_processing">
                                @if (_processing)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Змінити пароль
                            </button>
                        </EditForm>

                        <hr class="my-4" />

                        <div class="text-center">
                            <a href="/Account/Login" class="text-decoration-none">← Повернутися до входу</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool _processing;
    private bool _success;
    private string? _errorMessage;

    [SupplyParameterFromQuery]
    public string? Code { get; set; }

    [SupplyParameterFromForm]
    private ResetPasswordModel Model { get; set; } = null!;

    protected override void OnInitialized()
    {
        Model ??= new();
    }

    private async Task HandleSubmit()
    {
        _processing = true;
        _errorMessage = null;

        try
        {
            if (string.IsNullOrEmpty(Model.Email))
            {
                _errorMessage = "Введіть email.";
                return;
            }

            if (Model.Password != Model.ConfirmPassword)
            {
                _errorMessage = "Паролі не співпадають.";
                return;
            }

            var user = await UserManager.FindByEmailAsync(Model.Email);
            if (user == null)
            {
                // Don't reveal that the user does not exist
                _errorMessage = "Невірні дані або посилання застаріло.";
                return;
            }

            var code = Uri.UnescapeDataString(Code!);
            var result = await UserManager.ResetPasswordAsync(user, code, Model.Password!);

            if (result.Succeeded)
            {
                _success = true;
            }
            else
            {
                _errorMessage = IdentityErrorTranslator.TranslateErrors(result.Errors);
            }
        }
        finally
        {
            _processing = false;
        }
    }

    private class ResetPasswordModel
    {
        [Required(ErrorMessage = "Email обов'язковий")]
        [EmailAddress(ErrorMessage = "Невірний формат email")]
        public string? Email { get; set; }

        [Required(ErrorMessage = "Пароль обов'язковий")]
        [StringLength(100, MinimumLength = 8, ErrorMessage = "Пароль має бути від 8 до 100 символів")]
        public string? Password { get; set; }

        [Required(ErrorMessage = "Підтвердження пароля обов'язкове")]
        [Compare(nameof(Password), ErrorMessage = "Паролі не співпадають")]
        public string? ConfirmPassword { get; set; }
    }
}

