@page "/Account/Login"
@inject NavigationManager NavigationManager

<PageTitle>Вхід</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Вхід</h3>

                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @_errorMessage
                            @if (_showResendLink)
                            {
                                <div class="mt-2">
                                    <a href="/Account/ResendConfirmation?email=@Uri.EscapeDataString(EmailFromQuery ?? "")">Надіслати лист повторно</a>
                                </div>
                            }
                        </div>
                    }

                    <form method="post" action="/api/Auth/login">
                        <input type="hidden" name="returnUrl" value="@(ReturnUrl ?? "/")" />

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="user@example.com" required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Пароль</label>
                            <input type="password" id="password" name="password" class="form-control" required />
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" id="rememberMe" name="rememberMe" value="true" class="form-check-input" />
                            <label class="form-check-label" for="rememberMe">
                                Запам'ятати мене
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Увійти</button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="/Account/ForgotPassword" class="text-decoration-none">Забули пароль?</a>
                    </div>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p>Немає облікового запису?</p>
                        <a href="/Account/Register" class="btn btn-outline-secondary w-100">Зареєструватися</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? _errorMessage;
    private bool _showResendLink;

    [SupplyParameterFromQuery(Name = "returnUrl")]
    public string? ReturnUrl { get; set; }

    [SupplyParameterFromQuery(Name = "error")]
    public string? Error { get; set; }

    [SupplyParameterFromQuery(Name = "email")]
    public string? EmailFromQuery { get; set; }

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(Error))
        {
            (_errorMessage, _showResendLink) = Error switch
            {
                "lockedout" => ("Ваш обліковий запис заблоковано на 15 хвилин через багато невдалих спроб входу.", false),
                "invalid" => ("Невірний email або пароль.", false),
                "emailnotconfirmed" => ("Електронна адреса не підтверджена. Перевірте свою пошту.", true),
                _ => ("Виникла помилка. Спробуйте ще раз.", false)
            };
        }
    }
}

