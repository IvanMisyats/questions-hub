@page "/Account/AccessDenied"

<PageTitle>Доступ заборонено</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <Icon Name="shield-exclamation" Class="text-danger" Size="64" />
                    </div>

                    <h3 class="card-title mb-3">Доступ заборонено</h3>
                    <p class="text-muted mb-4">
                        У вас немає прав для перегляду цієї сторінки.
                    </p>

                    <div class="d-grid gap-2">
                        <a href="/" class="btn btn-primary">Повернутися на головну</a>
                        <a href="/Account/Login" class="btn btn-outline-secondary">Увійти як інший користувач</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

