@page "/Account/ConfirmEmail"
@using Microsoft.AspNetCore.Identity
@using QuestionsHub.Blazor.Domain
@inject UserManager<ApplicationUser> UserManager

<PageTitle>Підтвердження email</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    @if (_isLoading)
                    {
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Завантаження...</span>
                        </div>
                        <p class="mt-3">Підтверджуємо вашу електронну адресу...</p>
                    }
                    else if (_success)
                    {
                        <div class="text-success mb-3">
                            <i class="bi bi-check-circle-fill" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="text-success">Email підтверджено!</h4>
                        <p>Ваша електронна адреса успішно підтверджена.</p>
                        <p>Тепер ви можете увійти до свого облікового запису.</p>
                        <a href="/Account/Login" class="btn btn-primary mt-3">Увійти</a>
                    }
                    else
                    {
                        <div class="text-danger mb-3">
                            <i class="bi bi-x-circle-fill" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="text-danger">Помилка підтвердження</h4>
                        <p>@_errorMessage</p>
                        <a href="/" class="btn btn-outline-secondary mt-3">На головну</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool _isLoading = true;
    private bool _success;
    private string? _errorMessage;

    [SupplyParameterFromQuery]
    public string? UserId { get; set; }

    [SupplyParameterFromQuery]
    public string? Code { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(UserId) || string.IsNullOrEmpty(Code))
        {
            _errorMessage = "Невірне посилання для підтвердження.";
            _isLoading = false;
            return;
        }

        var user = await UserManager.FindByIdAsync(UserId);
        if (user == null)
        {
            _errorMessage = "Користувача не знайдено.";
            _isLoading = false;
            return;
        }

        // Decode the token (it was URL-encoded)
        var code = Uri.UnescapeDataString(Code);
        var result = await UserManager.ConfirmEmailAsync(user, code);

        if (result.Succeeded)
        {
            _success = true;
        }
        else
        {
            _errorMessage = "Посилання для підтвердження недійсне або застаріле.";
        }

        _isLoading = false;
    }
}

