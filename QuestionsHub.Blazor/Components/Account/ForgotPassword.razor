@page "/Account/ForgotPassword"
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity
@using QuestionsHub.Blazor.Domain
@inject UserManager<ApplicationUser> UserManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject NavigationManager NavigationManager

<PageTitle>Відновлення пароля</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">Відновлення пароля</h3>

                    @if (_sent)
                    {
                        <div class="text-center">
                            <div class="text-primary mb-3">
                                <i class="bi bi-envelope-check" style="font-size: 3rem;"></i>
                            </div>
                            <h5>Перевірте свою пошту</h5>
                            <p class="text-muted">
                                Якщо обліковий запис з цією адресою існує, ми надіслали інструкції для скидання пароля.
                            </p>
                            <a href="/Account/Login" class="btn btn-outline-primary mt-3">Повернутися до входу</a>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(_errorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @_errorMessage
                            </div>
                        }

                        <p class="text-muted mb-4">
                            Введіть email, який ви використовували при реєстрації.
                            Ми надішлемо вам посилання для скидання пароля.
                        </p>

                        <EditForm Model="@Model" OnValidSubmit="HandleSubmit" FormName="ForgotPassword">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <InputText id="email" @bind-Value="Model.Email" class="form-control" placeholder="user@example.com" />
                                <ValidationMessage For="@(() => Model.Email)" />
                            </div>

                            <button type="submit" class="btn btn-primary w-100" disabled="@_processing">
                                @if (_processing)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Надіслати посилання
                            </button>
                        </EditForm>

                        <hr class="my-4" />

                        <div class="text-center">
                            <a href="/Account/Login" class="text-decoration-none">← Повернутися до входу</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool _processing;
    private bool _sent;
    private string? _errorMessage;

    [SupplyParameterFromForm]
    private ForgotPasswordModel Model { get; set; } = null!;

    protected override void OnInitialized()
    {
        Model ??= new();
    }

    private async Task HandleSubmit()
    {
        _processing = true;
        _errorMessage = null;

        try
        {
            if (string.IsNullOrEmpty(Model.Email))
            {
                _errorMessage = "Введіть email.";
                return;
            }

            var user = await UserManager.FindByEmailAsync(Model.Email);

            // Always show success to prevent email enumeration
            // Only send email if user exists and email is confirmed
            if (user != null && await UserManager.IsEmailConfirmedAsync(user))
            {
                var code = await UserManager.GeneratePasswordResetTokenAsync(user);
                var callbackUrl = NavigationManager.ToAbsoluteUri(
                    $"/Account/ResetPassword?code={Uri.EscapeDataString(code)}").ToString();

                await EmailSender.SendPasswordResetLinkAsync(user, user.Email!, callbackUrl);
            }

            _sent = true;
        }
        finally
        {
            _processing = false;
        }
    }

    private class ForgotPasswordModel
    {
        [Required(ErrorMessage = "Email обов'язковий")]
        [EmailAddress(ErrorMessage = "Невірний формат email")]
        public string? Email { get; set; }
    }
}

