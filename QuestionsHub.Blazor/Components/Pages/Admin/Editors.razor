@page "/admin/editors"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Editor,Admin")]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore

@inject IDbContextFactory<QuestionsHubDbContext> DbContextFactory
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Редактори - QuestionsHub</PageTitle>

<div class="container py-4">
    <h1 class="mb-4">Редактори</h1>

    <div class="mb-3">
        <div class="input-group" style="max-width: 400px;">
            <span class="input-group-text">
                <Icon Name="search" />
            </span>
            <input type="text"
                   class="form-control"
                   placeholder="Пошук за ім'ям або прізвищем..."
                   @bind="_searchQuery"
                   @bind:event="oninput"
                   @bind:after="OnSearchAsync" />
            @if (!string.IsNullOrEmpty(_searchQuery))
            {
                <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                    <Icon Name="close" />
                </button>
            }
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Завантаження...</span>
            </div>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(_message))
        {
            <div class="alert @(_isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                @_message
                <button type="button" class="btn-close" @onclick="() => _message = null"></button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <Icon Name="group" Class="me-2" />Список редакторів (@_filteredEditors.Count)
            </div>
            <div class="card-body p-0">
                @if (_filteredEditors.Count == 0)
                {
                    <p class="text-muted p-3 mb-0">Редакторів не знайдено.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Ім'я</th>
                                    @if (_isAdmin)
                                    {
                                        <th>Email</th>
                                    }
                                    <th>Місто</th>
                                    <th>Пов'язаний автор</th>
                                    @if (_isAdmin)
                                    {
                                        <th style="width: 150px;">Дії</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var editor in _filteredEditors)
                                {
                                    <tr>
                                        <td>@editor.FullName</td>
                                        @if (_isAdmin)
                                        {
                                            <td>@editor.Email</td>
                                        }
                                        <td>@(editor.City ?? "—")</td>
                                        <td>
                                            @if (editor.Author != null)
                                            {
                                                <a href="/editor/@editor.Author.Id">@editor.Author.FullName</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        @if (_isAdmin)
                                        {
                                            <td>
                                                <button class="btn btn-outline-danger btn-sm"
                                                        @onclick="() => DemoteEditor(editor.Id)"
                                                        disabled="@_isProcessing">
                                                    <Icon Name="person-minus" Class="me-1" />Понизити
                                                </button>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        @if (_isAdmin)
        {
            <div class="mt-4">
                <a href="/admin/users" class="btn btn-primary">
                    <Icon Name="person-plus" Class="me-2" />Зробити редактором
                </a>
            </div>
        }
    }
</div>

@code {
    private List<ApplicationUser> _editors = [];
    private List<ApplicationUser> _filteredEditors = [];
    private bool _isLoading = true;
    private bool _isAdmin;
    private bool _isProcessing;
    private string? _message;
    private bool _isSuccess;
    private string _searchQuery = string.Empty;
    private CancellationTokenSource? _searchCts;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        _isAdmin = authState.User.IsInRole("Admin");

        await LoadEditorsAsync();
        _isLoading = false;
    }

    private async Task LoadEditorsAsync()
    {
        await using var context = await DbContextFactory.CreateDbContextAsync();

        var editorRole = await context.Roles.FirstOrDefaultAsync(r => r.Name == "Editor");
        if (editorRole == null)
        {
            _editors = [];
            _filteredEditors = [];
            return;
        }

        var editorUserIds = await context.UserRoles
            .Where(ur => ur.RoleId == editorRole.Id)
            .Select(ur => ur.UserId)
            .ToListAsync();

        _editors = await context.Users
            .Include(u => u.Author)
            .Where(u => editorUserIds.Contains(u.Id))
            .OrderBy(u => u.LastName)
            .ThenBy(u => u.FirstName)
            .ToListAsync();

        FilterEditors();
    }

    private void FilterEditors()
    {
        if (string.IsNullOrWhiteSpace(_searchQuery))
        {
            _filteredEditors = _editors;
            return;
        }

        var query = _searchQuery.Trim().ToLowerInvariant();
        _filteredEditors = _editors
            .Where(e => (e.FirstName?.ToLowerInvariant().StartsWith(query) ?? false)
                     || (e.LastName?.ToLowerInvariant().StartsWith(query) ?? false))
            .ToList();
    }

    private async Task OnSearchAsync()
    {
        _searchCts?.Cancel();
        _searchCts = new CancellationTokenSource();

        try
        {
            await Task.Delay(200, _searchCts.Token);
            FilterEditors();
            StateHasChanged();
        }
        catch (TaskCanceledException)
        {
            // Search was cancelled, ignore
        }
    }

    private void ClearSearch()
    {
        _searchQuery = string.Empty;
        FilterEditors();
    }

    private async Task DemoteEditor(string userId)
    {
        _isProcessing = true;
        _message = null;

        try
        {
            var user = await UserManager.FindByIdAsync(userId);
            if (user == null)
            {
                _message = "Користувача не знайдено.";
                _isSuccess = false;
                return;
            }

            var result = await UserManager.RemoveFromRoleAsync(user, "Editor");
            if (result.Succeeded)
            {
                _message = $"Користувача {user.FullName} понижено з редактора.";
                _isSuccess = true;
                await LoadEditorsAsync();
            }
            else
            {
                _message = $"Помилка: {string.Join(", ", result.Errors.Select(e => e.Description))}";
                _isSuccess = false;
            }
        }
        finally
        {
            _isProcessing = false;
        }
    }
}
