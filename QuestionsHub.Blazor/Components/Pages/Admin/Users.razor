@page "/admin/users"
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore

@inject IDbContextFactory<QuestionsHubDbContext> DbContextFactory
@inject UserManager<ApplicationUser> UserManager

<PageTitle>Користувачі - QuestionsHub</PageTitle>

<div class="container py-4">

    <h1 class="mb-4">Користувачі</h1>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Завантаження...</span>
            </div>
        </div>
    }
    else
    {
        @if (!string.IsNullOrEmpty(_message))
        {
            <div class="alert @(_isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                @_message
                <button type="button" class="btn-close" @onclick="() => _message = null"></button>
            </div>
        }

        <!-- Search -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Пошук за іменем або email..."
                           @bind="_searchQuery" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                    <button class="btn btn-outline-secondary" @onclick="SearchUsers">
                        <Icon Name="search" />
                    </button>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <Icon Name="group" Class="me-2" />Всі користувачі (@_users.Count)
            </div>
            <div class="card-body p-0">
                @if (_users.Count == 0)
                {
                    <p class="text-muted p-3 mb-0">
                        @if (string.IsNullOrEmpty(_searchQuery))
                        {
                            <text>Користувачів не знайдено.</text>
                        }
                        else
                        {
                            <text>Користувачів за запитом «@_searchQuery» не знайдено.</text>
                        }
                    </p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Ім'я</th>
                                    <th>Email</th>
                                    <th>Місто</th>
                                    <th>Команда</th>
                                    <th style="width: 200px;">Статус / Дії</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in _users)
                                {
                                    <tr>
                                        <td>@user.User.FullName</td>
                                        <td>@user.User.Email</td>
                                        <td>@(user.User.City ?? "—")</td>
                                        <td>@(user.User.Team ?? "—")</td>
                                        <td>
                                            @if (user.IsEditor)
                                            {
                                                <span class="badge bg-primary">Редактор</span>
                                            }
                                            else
                                            {
                                                <button class="btn btn-outline-success btn-sm"
                                                        @onclick="() => PromoteToEditor(user.User.Id)"
                                                        disabled="@_isProcessing">
                                                    <Icon Name="person-plus" Class="me-1" />Зробити редактором
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private List<UserWithRole> _users = [];
    private bool _isLoading = true;
    private bool _isProcessing;
    private string? _message;
    private bool _isSuccess;
    private string _searchQuery = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
        _isLoading = false;
    }

    private async Task LoadUsersAsync()
    {
        await using var context = await DbContextFactory.CreateDbContextAsync();

        // Get Editor role ID
        var editorRole = await context.Roles.FirstOrDefaultAsync(r => r.Name == "Editor");
        var adminRole = await context.Roles.FirstOrDefaultAsync(r => r.Name == "Admin");

        // Get all editor user IDs
        var editorUserIds = new HashSet<string>();
        if (editorRole != null)
        {
            var ids = await context.UserRoles
                .Where(ur => ur.RoleId == editorRole.Id)
                .Select(ur => ur.UserId)
                .ToListAsync();
            editorUserIds = ids.ToHashSet();
        }

        // Exclude admins from the list
        var adminUserIds = new HashSet<string>();
        if (adminRole != null)
        {
            var ids = await context.UserRoles
                .Where(ur => ur.RoleId == adminRole.Id)
                .Select(ur => ur.UserId)
                .ToListAsync();
            adminUserIds = ids.ToHashSet();
        }

        var query = context.Users
            .Where(u => !adminUserIds.Contains(u.Id));

        // Apply search filter
        if (!string.IsNullOrWhiteSpace(_searchQuery))
        {
            var searchLower = _searchQuery.ToLower();
            query = query.Where(u =>
                (u.FirstName + " " + u.LastName).ToLower().Contains(searchLower) ||
                (u.Email != null && u.Email.ToLower().Contains(searchLower)));
        }

        var users = await query
            .OrderBy(u => u.LastName)
            .ThenBy(u => u.FirstName)
            .Take(50)
            .ToListAsync();

        _users = users.Select(u => new UserWithRole
        {
            User = u,
            IsEditor = editorUserIds.Contains(u.Id)
        }).ToList();
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchUsers();
        }
    }

    private async Task SearchUsers()
    {
        _isLoading = true;
        await LoadUsersAsync();
        _isLoading = false;
    }

    private async Task PromoteToEditor(string userId)
    {
        _isProcessing = true;
        _message = null;

        try
        {
            var user = await UserManager.FindByIdAsync(userId);
            if (user == null)
            {
                _message = "Користувача не знайдено.";
                _isSuccess = false;
                return;
            }

            // Add to Editor role
            var result = await UserManager.AddToRoleAsync(user, "Editor");
            if (!result.Succeeded)
            {
                _message = $"Помилка: {string.Join(", ", result.Errors.Select(e => e.Description))}";
                _isSuccess = false;
                return;
            }

            // Create or link Author for this user
            await using var context = await DbContextFactory.CreateDbContextAsync();

            // First check if user already has a linked author
            var existingAuthorByUserId = await context.Authors
                .FirstOrDefaultAsync(a => a.UserId == userId);

            if (existingAuthorByUserId == null)
            {
                // Check if an author with the same name already exists (not linked to any user)
                var existingAuthorByName = await context.Authors
                    .FirstOrDefaultAsync(a => a.FirstName == user.FirstName
                                           && a.LastName == user.LastName);

                if (existingAuthorByName != null)
                {
                    // Link existing author to this user
                    if (existingAuthorByName.UserId == null)
                    {
                        existingAuthorByName.UserId = userId;
                        await context.SaveChangesAsync();
                        _message = $"Користувача {user.FullName} зроблено редактором та пов'язано з існуючим автором.";
                    }
                    else
                    {
                        // Author with same name is already linked to another user
                        _message = $"Користувача {user.FullName} зроблено редактором. Автор з таким ім'ям вже існує та пов'язаний з іншим користувачем.";
                    }
                }
                else
                {
                    // Create new author
                    var newAuthor = new Author
                    {
                        FirstName = user.FirstName,
                        LastName = user.LastName,
                        UserId = userId
                    };
                    context.Authors.Add(newAuthor);
                    await context.SaveChangesAsync();
                    _message = $"Користувача {user.FullName} зроблено редактором.";
                }
            }
            else
            {
                _message = $"Користувача {user.FullName} зроблено редактором.";
            }

            _isSuccess = true;
            await LoadUsersAsync();
        }
        catch (Exception ex)
        {
            _message = $"Помилка: {ex.Message}";
            _isSuccess = false;
        }
        finally
        {
            _isProcessing = false;
        }
    }

    private class UserWithRole
    {
        public required ApplicationUser User { get; set; }
        public bool IsEditor { get; set; }
    }
}

