@code {
    [Parameter]
    public int Id { get; set; }

    private Question? _question;
    private bool _notFound;
    private bool _isAdult;

    protected override async Task OnInitializedAsync()
    {
        _question = await DbContext.Questions
            .AsNoTracking()
            .Include(q => q.Authors)
            .Include(q => q.Tour)
                .ThenInclude(t => t.Package)
                    .ThenInclude(p => p.Tags)
            .FirstOrDefaultAsync(q => q.Id == Id);

        if (_question == null)
        {
            _notFound = true;
            return;
        }

        // Check visibility based on package status and access level
        var accessContext = await AccessControl.GetPackageAccessContext();
        if (!accessContext.CanViewPackage(_question.Tour.Package))
        {
            _question = null;
            _notFound = true;
            return;
        }

        // Check if the package has 18+ content tag
        _isAdult = TagService.IsAdultContent(_question.Tour.Package.Tags);
    }
}
