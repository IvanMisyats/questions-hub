@page "/editor/{Id:int}"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using QuestionsHub.Blazor.Domain
@using QuestionsHub.Blazor.Infrastructure
@inject IJSRuntime JS
@inject NavigationManager Navigation

@inject IDbContextFactory<QuestionsHubDbContext> DbContextFactory
@inject AuthorService AuthorService
@inject AccessControlService AccessControl

<PageTitle>@(_author?.FullName ?? "Редактора не знайдено")</PageTitle>

<div class="container py-4">
    @if (_isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Завантаження...</span>
            </div>
        </div>
    }
    else if (_author == null)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>Редактора не знайдено
        </div>
        <a href="/" class="btn btn-secondary">Повернутися на головну</a>
    }
    else
    {
        <h1 class="mb-4">@_author.FullName</h1>

        <!-- Linked User Section (Admin Only) -->
        @if (_isAdmin)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-person-badge me-2"></i>Пов'язаний користувач
                </div>
                <div class="card-body">
                    @if (_linkedUser != null)
                    {
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <strong>@_linkedUser.FullName</strong>
                                <br/>
                                <small class="text-muted">@_linkedUser.Email</small>
                                @if (!string.IsNullOrEmpty(_linkedUser.City))
                                {
                                    <br/>
                                    <small class="text-muted">@_linkedUser.City</small>
                                }
                            </div>
                            <button class="btn btn-outline-danger btn-sm" @onclick="UnlinkUser" disabled="@_isProcessing">
                                <i class="bi bi-link-45deg me-1"></i>Від'єднати
                            </button>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Автор не пов'язаний з жодним користувачем.</p>
                        <hr/>
                        <div class="row g-3 align-items-end">
                            <div class="col-md-8">
                                <label class="form-label">Обрати користувача для зв'язування:</label>
                                <select class="form-select" @bind="_selectedUserId" disabled="@_isProcessing">
                                    <option value="">-- Оберіть користувача --</option>
                                    @foreach (var user in _availableUsers)
                                    {
                                        <option value="@user.Id">@user.FullName (@user.Email)</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-primary" @onclick="LinkUser"
                                        disabled="@(string.IsNullOrEmpty(_selectedUserId) || _isProcessing)">
                                    <i class="bi bi-link me-1"></i>Пов'язати
                                </button>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(_linkMessage))
                    {
                        <div class="alert @(_linkSuccess ? "alert-success" : "alert-danger") mt-3 mb-0" role="alert">
                            @_linkMessage
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Statistics Section -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card h-100" @onclick="ShowPackagesList" style="cursor: pointer;">
                    <div class="card-header">
                        <i class="bi bi-box me-2"></i>Пакети
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@_packagesCount</h3>
                        <p class="card-text text-muted">пакетів, де @_author.FirstName є редактором</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100" @onclick="ShowQuestionsList" style="cursor: pointer;">
                    <div class="card-header">
                        <i class="bi bi-question-circle me-2"></i>Запитання
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@_questionsCount</h3>
                        <p class="card-text text-muted">запитань, де @_author.FirstName є автором</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Packages List Section -->
        @if (_packagesList.Any() && _showPackagesList)
        {
            <div class="card mb-4" id="packages-list">
                <div class="card-header">
                    <i class="bi bi-list-ul me-2"></i>Список пакетів
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        @foreach (var packageItem in _packagesList.Take(_displayedPackagesCount))
                        {
                            <li class="mb-2">
                                <a href="/package/@packageItem.PackageId">@packageItem.PackageTitle</a>
                                @if (!packageItem.IsGlobalEditor && packageItem.Tours.Any())
                                {
                                    @TourSeparator
                                    @foreach (var (entry, isLast) in GetPackageEntries(packageItem))
                                    {
                                        <a href="@entry.Href">@entry.Text</a>
                                        @if (!isLast)
                                        {
                                            @(" | ")
                                        }
                                    }
                                }
                            </li>
                        }
                    </ul>
                    @if (_packagesList.Count > _displayedPackagesCount)
                    {
                        <button class="btn btn-link" @onclick="ShowMorePackages">
                            показати більше
                        </button>
                    }
                </div>
            </div>
        }

        <!-- Questions List Section -->
        @if (_showQuestionsList)
        {
            <div class="mb-4" id="questions-list">
                <h4 class="mb-3">Список питань</h4>
                @if (_isLoadingQuestions)
                {
                    <div class="d-flex justify-content-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Завантаження...</span>
                        </div>
                    </div>
                }
                else if (_questionsList.Any())
                {
                    @foreach (var question in _questionsList)
                    {
                        <div class="card mb-3">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div>
                                    <a href="/package/@question.Tour.PackageId" class="text-decoration-none fw-bold">@question.Tour.Package.Title</a>
                                    <span class="text-muted mx-2">→</span>
                                    <span class="text-muted">Тур @question.Tour.Number</span>
                                    <span class="text-muted mx-2">→</span>
                                    <span class="text-muted">Запитання @question.Number</span>
                                </div>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => CopyQuestionLink(question.Id))" title="Скопіювати посилання на запитання">
                                    @if (_copiedQuestionId == question.Id)
                                    {
                                        <Icon Name="check" />
                                    }
                                    else
                                    {
                                        <Icon Name="link" />
                                    }
                                </button>
                            </div>
                            <div class="card-body">
                                <QuestionContent Question="@question" ShowAnswer="@GetQuestionAnswerState(question.Id)">
                                    <div class="answer-toggle-section mt-3">
                                        <button class="btn btn-link answer-toggle p-0" @onclick="@(() => ToggleQuestionAnswer(question.Id))">
                                            @if (GetQuestionAnswerState(question.Id))
                                            {
                                                <text>Сховати відповідь</text>
                                            }
                                            else
                                            {
                                                <text>Показати відповідь</text>
                                            }
                                        </button>
                                    </div>
                                </QuestionContent>
                            </div>
                        </div>
                    }
                    @if (_hasMoreQuestions)
                    {
                        <div class="text-center mt-3">
                            <button class="btn btn-primary" @onclick="LoadMoreQuestions" disabled="@_isLoadingQuestions">
                                Показати більше
                            </button>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        <p class="mb-0">Запитання не знайдено.</p>
                    </div>
                }
            </div>
        }

        <a href="/" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Повернутися на головну
        </a>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Author? _author;
    private UserForLinking? _linkedUser;
    private List<UserForLinking> _availableUsers = [];
    private string? _selectedUserId;
    private bool _isLoading = true;
    private bool _isAdmin;
    private bool _isProcessing;
    private string? _linkMessage;
    private bool _linkSuccess;
    private int _packagesCount;
    private int _questionsCount;
    private List<PackageListItem> _packagesList = [];
    private const int PackagesPerPage = 20;
    private int _displayedPackagesCount = PackagesPerPage;
    private const string TourSeparator = " → ";
    private bool _showPackagesList = true;
    private bool _showQuestionsList = false;
    private List<Question> _questionsList = [];
    private const int QuestionsPerPage = 20;
    private int _displayedQuestionsCount = 0;
    private bool _isLoadingQuestions = false;
    private bool _hasMoreQuestions = false;
    private Dictionary<int, bool> _questionAnswerStates = new();
    private int? _copiedQuestionId;
    private bool _copyInProgress;
    private const int CopyFeedbackDelayMs = 2000;

    private class PackageListItem
    {
        public int PackageId { get; set; }
        public required string PackageTitle { get; set; }
        public bool IsGlobalEditor { get; set; }
        public List<TourListItem> Tours { get; set; } = [];
    }

    private class TourListItem
    {
        public int TourId { get; set; }
        public required string TourNumber { get; set; }
        public List<BlockListItem> Blocks { get; set; } = [];
    }

    private class BlockListItem
    {
        public int BlockId { get; set; }
        public int BlockNumber { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        // Check if current user is admin
        _isAdmin = await AccessControl.IsAdmin();

        await LoadAuthorDataAsync();
        _isLoading = false;
    }

    private async Task LoadAuthorDataAsync()
    {
        await using var context = await DbContextFactory.CreateDbContextAsync();

        _author = await context.Authors
            .Include(a => a.User)
            .Include(a => a.Packages)
            .Include(a => a.Tours)
                .ThenInclude(t => t.Package)
            .Include(a => a.Blocks)
                .ThenInclude(b => b.Tour)
                    .ThenInclude(t => t.Package)
            .Include(a => a.Questions)
                .ThenInclude(q => q.Tour)
                    .ThenInclude(t => t.Package)
            .FirstOrDefaultAsync(a => a.Id == Id);

        if (_author != null)
        {
            // Get current user's access context
            var accessContext = await AccessControl.GetPackageAccessContext();

            // Filter tours and blocks based on package status and access level
            var publishedToursFromTours = _author.Tours
                .Where(t => t.Package.Status == PackageStatus.Published)
                .Where(t => accessContext.CanAccessPackage(t.Package))
                .ToList();
            var publishedToursFromBlocks = _author.Blocks
                .Where(b => b.Tour.Package.Status == PackageStatus.Published)
                .Where(b => accessContext.CanAccessPackage(b.Tour.Package))
                .ToList();

            // Filter packages where author is a global editor (SharedEditors = true)
            var publishedPackagesAsGlobalEditor = _author.Packages
                .Where(p => p.Status == PackageStatus.Published && p.SharedEditors)
                .Where(p => accessContext.CanAccessPackage(p))
                .ToList();

            var packageIdsFromTours = publishedToursFromTours.Select(t => t.PackageId);
            var packageIdsFromBlocks = publishedToursFromBlocks.Select(b => b.Tour.PackageId);
            var packageIdsAsGlobalEditor = publishedPackagesAsGlobalEditor.Select(p => p.Id);
            _packagesCount = packageIdsFromTours.Union(packageIdsFromBlocks).Union(packageIdsAsGlobalEditor).Distinct().Count();

            // Only count questions from packages the user can access
            _questionsCount = _author.Questions.Count(q =>
                q.Tour.Package.Status == PackageStatus.Published
                && accessContext.CanAccessPackage(q.Tour.Package));

            // Build packages list grouped by package, including both tours and blocks
            // Only include published packages
            var tourItems = publishedToursFromTours
                .Select(t => new
                {
                    t.PackageId,
                    PackageTitle = t.Package.Title,
                    TourId = t.Id,
                    TourNumber = (string?)t.Number,
                    BlockId = (int?)null,
                    BlockOrderIndex = (int?)null,
                    IsGlobalEditor = false
                });

            var blockItems = publishedToursFromBlocks
                .Select(b => new
                {
                    b.Tour.PackageId,
                    PackageTitle = b.Tour.Package.Title,
                    TourId = b.Tour.Id,
                    TourNumber = (string?)b.Tour.Number,
                    BlockId = (int?)b.Id,
                    BlockOrderIndex = (int?)b.OrderIndex,
                    IsGlobalEditor = false
                });

            // Add packages where author is a global editor (these won't have tour/block items)
            var globalEditorPackageItems = publishedPackagesAsGlobalEditor
                .Select(p => new
                {
                    PackageId = p.Id,
                    PackageTitle = p.Title,
                    TourId = 0,
                    TourNumber = (string?)null,
                    BlockId = (int?)null,
                    BlockOrderIndex = (int?)null,
                    IsGlobalEditor = true
                });

            // Combine all items, but for global editor packages, don't include tour-level items
            var globalEditorPackageIds = publishedPackagesAsGlobalEditor.Select(p => p.Id).ToHashSet();

            _packagesList = tourItems
                .Where(t => !globalEditorPackageIds.Contains(t.PackageId)) // Exclude tour items for global editor packages
                .Union(blockItems.Where(b => !globalEditorPackageIds.Contains(b.PackageId))) // Exclude block items for global editor packages
                .Union(globalEditorPackageItems)
                .GroupBy(x => new { x.PackageId, x.PackageTitle })
                .Select(g => new PackageListItem
                {
                    PackageId = g.Key.PackageId,
                    PackageTitle = g.Key.PackageTitle,
                    IsGlobalEditor = g.Any(x => x.IsGlobalEditor),
                    Tours = g
                        .Where(x => !x.IsGlobalEditor && x.TourNumber != null)
                        .GroupBy(x => new { x.TourId, x.TourNumber })
                        .Select(tg => new TourListItem
                        {
                            TourId = tg.Key.TourId,
                            TourNumber = tg.Key.TourNumber!,
                            Blocks = tg
                                .Where(x => x.BlockId.HasValue)
                                .OrderBy(x => x.BlockOrderIndex)
                                .Select((x, index) => new BlockListItem
                                {
                                    BlockId = x.BlockId!.Value,
                                    BlockNumber = index + 1
                                })
                                .ToList()
                        })
                        .OrderBy(t => int.TryParse(t.TourNumber, out var num) ? num : int.MaxValue)
                        .ThenBy(t => t.TourNumber)
                        .ToList()
                })
                .OrderByDescending(p => p.PackageId)
                .ToList();

            // Load linked user info
            _linkedUser = await AuthorService.GetLinkedUser(Id);

            // If admin and no linked user, load available users
            if (_isAdmin && _linkedUser == null)
            {
                _availableUsers = await AuthorService.GetAvailableUsersForLinking();
            }
        }
    }

    private void ShowMorePackages()
    {
        _displayedPackagesCount += PackagesPerPage;
    }

    private IEnumerable<((string Text, string Href) Entry, bool IsLast)> GetPackageEntries(PackageListItem packageItem)
    {
        var allEntries = new List<(string Text, string Href)>();

        foreach (var tour in packageItem.Tours)
        {
            if (tour.Blocks.Any())
            {
                // Tour has blocks - show tour => block N for each block
                foreach (var block in tour.Blocks)
                {
                    allEntries.Add((
                        $"Тур {tour.TourNumber} → Блок {block.BlockNumber}",
                        $"/package/{packageItem.PackageId}#block-{block.BlockId}"
                    ));
                }
            }
            else
            {
                // Tour without blocks - just show tour
                allEntries.Add((
                    $"Тур {tour.TourNumber}",
                    $"/package/{packageItem.PackageId}#tour-{tour.TourId}"
                ));
            }
        }

        for (var i = 0; i < allEntries.Count; i++)
        {
            yield return (allEntries[i], i == allEntries.Count - 1);
        }
    }

    private void ShowPackagesList()
    {
        _showPackagesList = true;
        _showQuestionsList = false;
    }

    private async Task ShowQuestionsList()
    {
        _showPackagesList = false;
        _showQuestionsList = true;

        if (_questionsList.Count == 0)
        {
            await LoadMoreQuestions();
        }
    }

    private async Task LoadMoreQuestions()
    {
        if (_author == null) return;

        _isLoadingQuestions = true;

        try
        {
            await using var context = await DbContextFactory.CreateDbContextAsync();
            var accessContext = await AccessControl.GetPackageAccessContext();

            var skip = _displayedQuestionsCount;
            var take = QuestionsPerPage;

            // Load questions from published packages, then filter by access level in memory
            var questions = await context.Questions
                .Where(q => q.Authors.Any(a => a.Id == _author.Id)
                         && q.Tour.Package.Status == PackageStatus.Published)
                .Include(q => q.Authors)
                .Include(q => q.Tour)
                    .ThenInclude(t => t.Package)
                .OrderByDescending(q => q.Tour.PackageId)
                .ThenBy(q => q.Tour.Number)
                .ThenBy(q => q.OrderIndex)
                .ToListAsync();

            // Apply access level filter in memory
            var accessibleQuestions = questions
                .Where(q => accessContext.CanAccessPackage(q.Tour.Package))
                .ToList();

            // Only get total count on first load
            if (_displayedQuestionsCount == 0)
            {
                _questionsCount = accessibleQuestions.Count;
            }

            var pagedQuestions = accessibleQuestions.Skip(skip).Take(take).ToList();
            _hasMoreQuestions = (skip + pagedQuestions.Count) < _questionsCount;

            _questionsList.AddRange(pagedQuestions);
            _displayedQuestionsCount += pagedQuestions.Count;
        }
        finally
        {
            _isLoadingQuestions = false;
        }
    }

    private bool GetQuestionAnswerState(int questionId)
    {
        return _questionAnswerStates.GetValueOrDefault(questionId, false);
    }

    private void ToggleQuestionAnswer(int questionId)
    {
        if (_questionAnswerStates.ContainsKey(questionId))
        {
            _questionAnswerStates[questionId] = !_questionAnswerStates[questionId];
        }
        else
        {
            _questionAnswerStates[questionId] = true;
        }
    }

    private async Task CopyQuestionLink(int questionId)
    {
        if (_copyInProgress)
        {
            return;
        }

        _copyInProgress = true;

        try
        {
            var baseUri = Navigation.BaseUri.TrimEnd('/');
            var questionUrl = $"{baseUri}/question/{questionId}";

            var success = await JS.InvokeAsync<bool>("copyToClipboard", questionUrl);
            if (success)
            {
                _copiedQuestionId = questionId;
                StateHasChanged();

                await Task.Delay(CopyFeedbackDelayMs);
                _copiedQuestionId = null;
                StateHasChanged();
            }
        }
        finally
        {
            _copyInProgress = false;
        }
    }

    private async Task LinkUser()
    {
        if (string.IsNullOrEmpty(_selectedUserId))
            return;

        _isProcessing = true;
        _linkMessage = null;

        var result = await AuthorService.LinkAuthorToUser(Id, _selectedUserId);

        _linkSuccess = result.Success;
        _linkMessage = result.Message;

        if (result.Success)
        {
            _linkedUser = await AuthorService.GetLinkedUser(Id);
            _selectedUserId = null;
            _availableUsers = [];
        }

        _isProcessing = false;
    }

    private async Task UnlinkUser()
    {
        _isProcessing = true;
        _linkMessage = null;

        var result = await AuthorService.UnlinkAuthorFromUser(Id);

        _linkSuccess = result.Success;
        _linkMessage = result.Message;

        if (result.Success)
        {
            _linkedUser = null;
            _availableUsers = await AuthorService.GetAvailableUsersForLinking();
        }

        _isProcessing = false;
    }
}

