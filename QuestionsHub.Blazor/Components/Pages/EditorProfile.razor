@page "/editor/{Id:int}"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore

@inject IDbContextFactory<QuestionsHubDbContext> DbContextFactory
@inject AuthorUserLinkingService AuthorUserLinkingService
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>@(_author?.FullName ?? "Редактор")</PageTitle>

<div class="container py-4">
    @if (_isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Завантаження...</span>
            </div>
        </div>
    }
    else if (_author == null)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>Редактора не знайдено
        </div>
        <a href="/" class="btn btn-secondary">Повернутися на головну</a>
    }
    else
    {
        <h1 class="mb-4">@_author.FullName</h1>

        <!-- Linked User Section -->
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-person-badge me-2"></i>Пов'язаний користувач
            </div>
            <div class="card-body">
                @if (_linkedUser != null)
                {
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <strong>@_linkedUser.FullName</strong>
                            @if (_isAdmin)
                            {
                                <br/>
                                <small class="text-muted">@_linkedUser.Email</small>
                            }
                            @if (!string.IsNullOrEmpty(_linkedUser.City))
                            {
                                <br/>
                                <small class="text-muted">@_linkedUser.City</small>
                            }
                        </div>
                        @if (_isAdmin)
                        {
                            <button class="btn btn-outline-danger btn-sm" @onclick="UnlinkUser" disabled="@_isProcessing">
                                <i class="bi bi-link-45deg me-1"></i>Від'єднати
                            </button>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Автор не пов'язаний з жодним користувачем.</p>
                    @if (_isAdmin)
                    {
                        <hr/>
                        <div class="row g-3 align-items-end">
                            <div class="col-md-8">
                                <label class="form-label">Обрати користувача для зв'язування:</label>
                                <select class="form-select" @bind="_selectedUserId" disabled="@_isProcessing">
                                    <option value="">-- Оберіть користувача --</option>
                                    @foreach (var user in _availableUsers)
                                    {
                                        <option value="@user.Id">@user.FullName (@user.Email)</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <button class="btn btn-primary" @onclick="LinkUser"
                                        disabled="@(string.IsNullOrEmpty(_selectedUserId) || _isProcessing)">
                                    <i class="bi bi-link me-1"></i>Пов'язати
                                </button>
                            </div>
                        </div>
                    }
                }

                @if (!string.IsNullOrEmpty(_linkMessage))
                {
                    <div class="alert @(_linkSuccess ? "alert-success" : "alert-danger") mt-3 mb-0" role="alert">
                        @_linkMessage
                    </div>
                }
            </div>
        </div>

        <!-- Statistics Section -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        <i class="bi bi-box me-2"></i>Пакети
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@_packagesCount</h3>
                        <p class="card-text text-muted">пакетів, де @_author.FirstName є редактором</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        <i class="bi bi-question-circle me-2"></i>Питання
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@_questionsCount</h3>
                        <p class="card-text text-muted">питань, де @_author.FirstName є автором</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Packages List Section -->
        @if (_packagesList.Any())
        {
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-list-ul me-2"></i>Пакети
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        @foreach (var packageItem in _packagesList.Take(_displayedPackagesCount))
                        {
                            <li class="mb-2">
                                <a href="/package/@packageItem.PackageId">@packageItem.PackageTitle</a>
                                @if (packageItem.Tours.Any())
                                {
                                    @(" ° ")
                                    @for (var i = 0; i < packageItem.Tours.Count; i++)
                                    {
                                        var tour = packageItem.Tours[i];
                                        <a href="/package/@packageItem.PackageId#tour-@tour.TourId">Тур @tour.TourNumber</a>
                                        @if (i < packageItem.Tours.Count - 1)
                                        {
                                            @(" ° ")
                                        }
                                    }
                                }
                            </li>
                        }
                    </ul>
                    @if (_packagesList.Count > _displayedPackagesCount)
                    {
                        <button class="btn btn-link" @onclick="ShowMorePackages">
                            показати більше
                        </button>
                    }
                </div>
            </div>
        }

        <a href="/" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Повернутися на головну
        </a>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Author? _author;
    private UserForLinking? _linkedUser;
    private List<UserForLinking> _availableUsers = [];
    private string? _selectedUserId;
    private bool _isLoading = true;
    private bool _isAdmin;
    private bool _isProcessing;
    private string? _linkMessage;
    private bool _linkSuccess;
    private int _packagesCount;
    private int _questionsCount;
    private List<PackageListItem> _packagesList = [];
    private int _displayedPackagesCount = 20;

    private class PackageListItem
    {
        public int PackageId { get; set; }
        public required string PackageTitle { get; set; }
        public List<TourListItem> Tours { get; set; } = [];
    }

    private class TourListItem
    {
        public int TourId { get; set; }
        public required string TourNumber { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        // Check if current user is admin
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        _isAdmin = authState.User.IsInRole("Admin");

        await LoadAuthorDataAsync();
        _isLoading = false;
    }

    private async Task LoadAuthorDataAsync()
    {
        await using var context = await DbContextFactory.CreateDbContextAsync();

        _author = await context.Authors
            .Include(a => a.User)
            .Include(a => a.Tours)
                .ThenInclude(t => t.Package)
            .Include(a => a.Questions)
            .FirstOrDefaultAsync(a => a.Id == Id);

        if (_author != null)
        {
            _packagesCount = _author.Tours
                .Select(t => t.PackageId)
                .Distinct()
                .Count();
            _questionsCount = _author.Questions.Count;

            // Build packages list grouped by package
            _packagesList = _author.Tours
                .GroupBy(t => new { t.PackageId, t.Package.Title })
                .Select(g => new PackageListItem
                {
                    PackageId = g.Key.PackageId,
                    PackageTitle = g.Key.Title,
                    Tours = g.Select(t => new TourListItem
                    {
                        TourId = t.Id,
                        TourNumber = t.Number
                    })
                    .OrderBy(t => int.TryParse(t.TourNumber, out var num) ? num : int.MaxValue)
                    .ThenBy(t => t.TourNumber)
                    .ToList()
                })
                .OrderByDescending(p => p.PackageId) // Show newest packages first
                .ToList();

            // Load linked user info
            _linkedUser = await AuthorUserLinkingService.GetLinkedUserAsync(Id);

            // If admin and no linked user, load available users
            if (_isAdmin && _linkedUser == null)
            {
                _availableUsers = await AuthorUserLinkingService.GetAvailableUsersForLinkingAsync();
            }
        }
    }

    private void ShowMorePackages()
    {
        _displayedPackagesCount += 20;
    }

    private async Task LinkUser()
    {
        if (string.IsNullOrEmpty(_selectedUserId))
            return;

        _isProcessing = true;
        _linkMessage = null;

        var result = await AuthorUserLinkingService.LinkAuthorToUserAsync(Id, _selectedUserId);

        _linkSuccess = result.Success;
        _linkMessage = result.Message;

        if (result.Success)
        {
            _linkedUser = await AuthorUserLinkingService.GetLinkedUserAsync(Id);
            _selectedUserId = null;
            _availableUsers = [];
        }

        _isProcessing = false;
    }

    private async Task UnlinkUser()
    {
        _isProcessing = true;
        _linkMessage = null;

        var result = await AuthorUserLinkingService.UnlinkAuthorFromUserAsync(Id);

        _linkSuccess = result.Success;
        _linkMessage = result.Message;

        if (result.Success)
        {
            _linkedUser = null;
            _availableUsers = await AuthorUserLinkingService.GetAvailableUsersForLinkingAsync();
        }

        _isProcessing = false;
    }
}

