@page "/editors"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using QuestionsHub.Blazor.Infrastructure

@inject AuthorService AuthorService
@inject AccessControlService AccessControl

<PageTitle>Список авторів</PageTitle>

<div class="container py-4">
    <h1 class="mb-4">Автори</h1>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <Icon Name="search" />
            </span>
            <input type="text"
                   class="form-control"
                   placeholder="Пошук за ім'ям або прізвищем..."
                   @bind="_searchQuery"
                   @bind:event="oninput"
                   @bind:after="OnSearchAsync" />
            @if (!string.IsNullOrEmpty(_searchQuery))
            {
                <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                    <Icon Name="close" />
                </button>
            }
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Завантаження...</span>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <Icon Name="group" Class="me-2" />Список авторів (@_authors.Count@(_hasNextPage ? "+" : ""))
            </div>
            <div class="card-body p-0">
                @if (_authors.Count == 0)
                {
                    <p class="text-muted p-3 mb-0">Авторів не знайдено.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Ім'я</th>
                                    <th class="text-end">Пакети</th>
                                    <th class="text-end">Запитання</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var author in _authors)
                                {
                                    <tr>
                                        <td>
                                            <a href="/editor/@author.Id">@author.FullName</a>
                                        </td>
                                        <td class="text-end">@author.PackageCount</td>
                                        <td class="text-end">@author.QuestionCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        <Pagination CurrentPage="_currentPage"
                    HasNextPage="_hasNextPage"
                    OnPageChanged="OnPageChanged" />
    }
</div>

@code {
    private const int PageSize = 25;
    private const int SearchDebounceMs = 400;

    private List<AuthorListItem> _authors = [];
    private bool _isLoading = true;
    private bool _hasNextPage;
    private int _currentPage = 1;
    private string _searchQuery = string.Empty;
    private string _appliedSearchQuery = string.Empty;
    private CancellationTokenSource? _searchCts;
    private PackageAccessContext? _accessContext;

    protected override async Task OnInitializedAsync()
    {
        _accessContext = await AccessControl.GetPackageAccessContext();
        await LoadAuthorsAsync();
        _isLoading = false;
    }

    private async Task OnSearchAsync()
    {
        _searchCts?.Cancel();
        _searchCts = new CancellationTokenSource();

        try
        {
            await Task.Delay(SearchDebounceMs, _searchCts.Token);

            // Reset to first page when search query changes
            _currentPage = 1;
            _appliedSearchQuery = _searchQuery;
            await LoadAuthorsAsync();
            StateHasChanged();
        }
        catch (TaskCanceledException)
        {
            // Search was cancelled, ignore
        }
    }

    private async Task ClearSearch()
    {
        _searchQuery = string.Empty;
        _appliedSearchQuery = string.Empty;
        _currentPage = 1;
        await LoadAuthorsAsync();
    }

    private async Task OnPageChanged(int page)
    {
        _currentPage = page;
        await LoadAuthorsAsync();
    }

    private async Task LoadAuthorsAsync()
    {
        if (_accessContext == null)
            return;

        var result = await AuthorService.GetAuthorsWithCountsPaginated(
            _accessContext,
            _currentPage,
            PageSize,
            string.IsNullOrWhiteSpace(_appliedSearchQuery) ? null : _appliedSearchQuery);

        _authors = result.Items;
        _hasNextPage = result.HasNextPage;
    }
}

