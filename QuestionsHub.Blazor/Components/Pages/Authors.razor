@page "/editors"
@page "/editors/{Page:int}"
@attribute [StreamRendering]
@using Microsoft.EntityFrameworkCore
@using QuestionsHub.Blazor.Infrastructure

@inject AuthorService AuthorService
@inject AccessControlService AccessControl

<PageTitle>Список авторів</PageTitle>

<div class="container py-4">
    <h1 class="mb-4">Автори</h1>

    <div class="mb-3">
        <form class="input-group" method="get" action="/editors">
            <span class="input-group-text">
                <Icon Name="search" />
            </span>
            <input type="text"
                   name="q"
                   class="form-control"
                   placeholder="Пошук за ім'ям або прізвищем..."
                   value="@Query" />
            <button type="submit" class="btn btn-outline-primary">
                <Icon Name="search" />
            </button>
            @if (!string.IsNullOrEmpty(Query))
            {
                <a href="/editors" class="btn btn-outline-secondary">
                    <Icon Name="close" />
                </a>
            }
        </form>
    </div>

    @if (_authors == null)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Завантаження...</span>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <Icon Name="group" Class="me-2" />Список авторів (@_totalCount)
            </div>
            <div class="card-body p-0">
                @if (_authors.Count == 0)
                {
                    <p class="text-muted p-3 mb-0">Авторів не знайдено.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Ім'я</th>
                                    <th class="text-end">Пакети</th>
                                    <th class="text-end">Запитання</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var author in _authors)
                                {
                                    <tr>
                                        <td>
                                            <a href="/editor/@author.Id">@author.FullName</a>
                                        </td>
                                        <td class="text-end">@author.PackageCount</td>
                                        <td class="text-end">@author.QuestionCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        <Pagination CurrentPage="CurrentPage"
                    TotalPages="_totalPages"
                    BaseUrl="@GetPaginationBaseUrl()" />
    }
</div>

@code {
    private const int PageSize = 25;

    [Parameter]
    public int Page { get; set; } = 1;

    [SupplyParameterFromQuery(Name = "q")]
    public string? Query { get; set; }

    private int CurrentPage => Page < 1 ? 1 : Page;

    private List<AuthorListItem>? _authors;
    private int _totalCount;
    private int _totalPages;

    protected override async Task OnInitializedAsync()
    {
        var accessContext = await AccessControl.GetPackageAccessContext();

        var result = await AuthorService.GetAuthorsWithCountsPaginated(
            accessContext,
            CurrentPage,
            PageSize,
            string.IsNullOrWhiteSpace(Query) ? null : Query);

        _authors = result.Items;
        _totalCount = result.TotalCount;
        _totalPages = (int)Math.Ceiling((double)result.TotalCount / PageSize);
    }

    private string GetPaginationBaseUrl()
    {
        if (string.IsNullOrWhiteSpace(Query))
            return "/editors";

        return $"/editors?q={Uri.EscapeDataString(Query)}";
    }
}
