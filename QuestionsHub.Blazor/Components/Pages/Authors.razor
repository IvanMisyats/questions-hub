@page "/editors"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using QuestionsHub.Blazor.Infrastructure

@inject AuthorService AuthorService

<PageTitle>Автори - QuestionsHub</PageTitle>

<div class="container py-4">
    <h1 class="mb-4">Автори</h1>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                </svg>
            </span>
            <input type="text"
                   class="form-control"
                   placeholder="Пошук за ім'ям або прізвищем..."
                   @bind="_searchQuery"
                   @bind:event="oninput"
                   @bind:after="OnSearchAsync" />
            @if (!string.IsNullOrEmpty(_searchQuery))
            {
                <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"/>
                    </svg>
                </button>
            }
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Завантаження...</span>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                    <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1zm-7.978-1L7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002-.014.002zM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0M6.936 9.28a6 6 0 0 0-1.23-.247A7 7 0 0 0 5 9c-4 0-5 3-5 4q0 1 1 1h4.216A2.24 2.24 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816M4.92 10A5.5 5.5 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0m3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4"/>
                </svg>Список авторів (@FilteredAuthors.Count@(string.IsNullOrEmpty(_searchQuery) ? "" : $" з {_authors.Count}"))
            </div>
            <div class="card-body p-0">
                @if (FilteredAuthors.Count == 0)
                {
                    <p class="text-muted p-3 mb-0">Авторів не знайдено.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Ім'я</th>
                                    <th class="text-end">Пакети</th>
                                    <th class="text-end">Питання</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var author in FilteredAuthors)
                                {
                                    <tr>
                                        <td>
                                            <a href="/editor/@author.Id">@author.FullName</a>
                                        </td>
                                        <td class="text-end">@author.PackageCount</td>
                                        <td class="text-end">@author.QuestionCount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private List<AuthorListItem> _authors = [];
    private List<AuthorListItem> _filteredAuthors = [];
    private bool _isLoading = true;
    private string _searchQuery = string.Empty;
    private CancellationTokenSource? _searchCts;

    private List<AuthorListItem> FilteredAuthors =>
        string.IsNullOrWhiteSpace(_searchQuery) ? _authors : _filteredAuthors;

    protected override async Task OnInitializedAsync()
    {
        await LoadAuthorsAsync();
        _isLoading = false;
    }

    private async Task OnSearchAsync()
    {
        _searchCts?.Cancel();
        _searchCts = new CancellationTokenSource();

        try
        {
            await Task.Delay(200, _searchCts.Token);

            var query = _searchQuery.Trim().ToLowerInvariant();
            if (string.IsNullOrWhiteSpace(query))
            {
                _filteredAuthors = [];
            }
            else
            {
                _filteredAuthors = _authors
                    .Where(a => a.FirstName.ToLowerInvariant().StartsWith(query) ||
                                a.LastName.ToLowerInvariant().StartsWith(query) ||
                                a.FullName.ToLowerInvariant().Contains(query))
                    .ToList();
            }
        }
        catch (TaskCanceledException)
        {
            // Search was cancelled, ignore
        }
    }

    private void ClearSearch()
    {
        _searchQuery = string.Empty;
        _filteredAuthors = [];
    }

    private async Task LoadAuthorsAsync()
    {
        _authors = await AuthorService.GetAllAuthorsWithCountsAsync();
    }
}

